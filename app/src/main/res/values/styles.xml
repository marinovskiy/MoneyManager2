<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
    </style>

    <!--dialog styles-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#14A69A</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!--buttons styles-->
    <style name="ButtonStyle">
        <item name="fontPath">fonts/RussoOne-Regular.ttf</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_medium</item>
    </style>

    <!--textView styles-->
    <style name="TextViewTitleStyle">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewSubTitleStyle">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--editText styles-->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/textColorPrimary</item>
        <item name="colorControlHighlight">@color/textColorPrimary</item>
    </style>

    <style name="EditTextStyle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
    </style>

    <!--navigation drawer styles-->
    <style name="NavDrawerHeaderTextViewStyle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_tiny</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>

    </style>

    <style name="NavDrawerMenuTextViewStyle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_small</item>
    </style>

