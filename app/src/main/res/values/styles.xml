<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
    </style>

    <!--dialog styles-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#14A69A</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!--buttons styles-->
    <style name="ButtonStyle">
        <item name="fontPath">fonts/RussoOne-Regular.ttf</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_medium</item>
    </style>

</resources>
