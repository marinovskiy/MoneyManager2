<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:layout_marginEnd="?attr/actionBarSize"
    android:background="@color/bgMain"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:id="@+id/nav_header_main_avatar"
            android:layout_width="@dimen/nav_drawer_header_avatar_size"
            android:layout_height="@dimen/nav_drawer_header_avatar_size"
            android:src="@drawable/ic_placeholder_avatar_white" />

        <TextView
            android:id="@+id/tv_email"
            style="@style/NavDrawerHeaderTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alexander.marinovskiy@gmail.com" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/NavDrawerHeaderTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexander Marinovskiy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_home" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Головна" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_accounts" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунти" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_organizations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_organization" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Групи" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_reports" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Звіти" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_profile" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профіль" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_settings" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Налаштування" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_nav_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_medium">

        <ImageView
            android:layout_width="@dimen/nav_drawer_menu_icon_size"
            android:layout_height="@dimen/nav_drawer_menu_icon_size"
            android:src="@drawable/ic_accounts" />

        <TextView
            style="@style/NavDrawerMenuTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вихід" />

    </LinearLayout>

</LinearLayout>