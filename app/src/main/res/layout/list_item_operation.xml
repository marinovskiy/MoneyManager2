<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_medium"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_operation_description"
                fontPath="fonts/RussoOne-Regular.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:paddingEnd="@dimen/margin_padding_small"
                android:text="Pizza"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_operation_sum"
                fontPath="fonts/RussoOne-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_padding_small"
                android:text="5.53 $"
                android:textColor="#0F0"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_operation_date"
            fontPath="fonts/RussoOne-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:ellipsize="end"
            android:text="24 Dec 2017"
            android:textColor="#000"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>